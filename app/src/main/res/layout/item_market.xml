<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_market_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Match Winner (Draw No Bet)" />

        <View
            android:id="@+id/contract1_bg"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_bg_grey"
            app:layout_constraintBottom_toBottomOf="@id/tv_contract1_price"
            app:layout_constraintEnd_toEndOf="@id/tv_contract1_price"
            app:layout_constraintStart_toStartOf="@id/tv_contract1_name"
            app:layout_constraintTop_toTopOf="@id/tv_contract1_name" />

        <TextView
            android:id="@+id/tv_contract1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@id/tv_contract1_price"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_market_name"
            tools:text="+0.5" />

        <TextView
            android:id="@+id/tv_contract1_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:textColor="@color/teal_200"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_contract1_name"
            app:layout_constraintTop_toTopOf="@id/tv_contract1_name"
            tools:text="1.12" />

        <View
            android:id="@+id/contract2_bg"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_bg_grey"
            app:layout_constraintBottom_toBottomOf="@id/tv_contract2_price"
            app:layout_constraintEnd_toEndOf="@id/tv_contract2_price"
            app:layout_constraintStart_toStartOf="@id/tv_contract2_name"
            app:layout_constraintTop_toTopOf="@id/tv_contract2_name" />

        <TextView
            android:id="@+id/tv_contract2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@id/tv_contract2_price"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contract1_bg"
            tools:text="+0.5" />

        <TextView
            android:id="@+id/tv_contract2_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:textColor="@color/teal_200"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_contract2_name"
            app:layout_constraintTop_toTopOf="@id/tv_contract2_name"
            tools:text="1.12" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>